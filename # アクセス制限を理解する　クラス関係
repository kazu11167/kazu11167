# アクセス制限を理解する

class Player:
    def __init__(self, job, weapon):
        self.job = job
        self.weapon = weapon

    def walk(self):
        print(self.job + "は荒野を歩いていた")

    def attack(self, enemy):
        print(self.weapon + "で" + enemy + "を攻撃")


player1 = Player("戦士", "剣")
player1.walk()
player1.attack("スライム")
print(player1.weapon)
